<button class="toolbutton" {{action "showConfirmDialog"}}><i class="fa fa-trash"></i></button>
{{#if confirmShown}}
    <div class="dialog-dimmer"></div>
    <div class="dialog-container confirm-dialog">
        <div class="accent-box top"></div>
        <div class="container-body">
            <div class="content">
                <h1>
                    {{t "ui.cards.card.delete-card.title"}}
                </h1>
                <h2>
                    {{t "ui.cards.card.delete-card.subtitle"}}
                </h2>
                <p>
                    {{t "ui.cards.card.delete-card.body-1"}}
                </p>
                <p>
                    <strong>{{card.characterName}} L{{card.level}} 
                    {{format-class card.characterClassId}} ({{card.remark}})</strong>
                </p>
                <p>
                    {{t "ui.cards.card.delete-card.body-2"}}
                </p>
                <div class="button-hbox">
                    <button class="confirm-action" {{action "submitConfirm"}}>
                        {{t "ui.cards.card.delete-card.delete-card"}}
                    </button>
                    <button class="cancel-action" {{action "cancelConfirm"}}>
                        {{t "ui.cards.card.delete-card.keep-card"}}
                    </button>
                </div>
            </div>
        </div>
        <div class="accent-box bottom"></div>
    </div>
{{/if}}
