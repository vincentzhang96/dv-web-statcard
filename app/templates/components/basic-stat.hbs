{{#if isText}}
<div class="stat-entry basic" {{action activate}}>
    <div class="label">{{label}}</div>
    {{#if showInput}}
        {{input class="stat-value edit" value=(mut value) type="text" enter="unfocus" focus-out="focusOut"}}
    {{else}}
        <div class="stat-value">{{value}}</div>
    {{/if}}
</div>
{{else}}
<div class="stat-entry basic">
    <div class="label">{{label}}</div>
    {{#if showInput}}
        {{input class="stat-value edit" value=(mut value) min="0" type="number" inputmode="numeric" enter="unfocus" focus-out="focusOut"}}
    {{else}}
        <div class="stat-value" {{action activate}}>{{basic-stat-value value}}</div>
    {{/if}}
</div>
{{/if}}
